<% layout("/layouts/boilerplate") %>
<body>
    <div class = "row mt-3">
     <div class = "col-8 offset=2">
        <br><br>
    <h3>Create a New Listing</h3>
    <form method = "post" action = "/listings" novalidate class ="needs-validation" enctype ="multipart/form-data">
        
        <div class ="mb-3">
            <lable for="title" class = "form-lable">Title</lable>
            <input name = "listing[title]" placeholder = "Add a catchy title" type = "text" class = "form-control" required><br>
            <div class ="valid-feedback">
                Title looks good
            </div>
        </div>
        <div class ="mb-3">
            <lable for="description" class = "form-lable" class = "form-lable">Description</lable>
            <textarea name = "listing[description]" placeholder = "enter description" class ="form-control" required></textarea><br>
            <div class ="invalid-feedback">
                Please enter a short description
            </div>
        </div>
       
        <div class ="mb-3">
            <lable for="image" class = "form-lable" class = "form-lable">Upload Listing Image</lable>
            <input name = "listing[image]" type = "file" class ="form-control"><br>
            required
        </div>
        <div class="row">

            <div class ="mb-3 col-4">
                <lable for="price" class = "form-lable" class = "form-lable">Price</lable>
                <input name = "listing[price]" placeholder = "1200" type = "number" class ="form-control" required><br>
                <div class ="invalid-feedback">
                    Please enter a valid price
                </div>
            </div>
            <div class ="mb-3 col-md-8">
                <lable for="country" class = "form-lable" class = "form-lable">Country</lable>
                <input name = "listing[country]" placeholder = "India" type= "text" class ="form-control" required><br>
                <div class ="invalid-feedback">
                    Please enter the country name
                </div>
            </div>
        </div>
        <div class ="mb-3">
            <lable for="location" class = "form-lable" class = "form-lable">Location</lable>
            <input name = "listing[location]" placeholder = "Delhi" type= "text" class ="form-control" required><br><br>
            <div class ="invalid-feedback">
                Location should be valid
            </div>
        </div>
        
        <button class= "btn btn-dark add-btn mt-3">Add</button><br><br>
    </form>
    </div>
    </div>
</body>
